<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".UI.RecordWave">

    <com.example.zece.healthtracker.Waveform.WaveformView
        android:id="@+id/playback_waveform_view"
        android:layout_width="357dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="145dp"
        android:layout_weight="1"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mode="PLAYBACK"
        app:waveformColor="#D3D3D3"
        app:waveformFillColor="#A9A9A9"
        app:waveformStrokeThickness="3" />


    <ImageButton
        android:id="@+id/start_recorded_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/start_recorded_button"
        android:src="@drawable/icons_start"
        android:tint="@color/default_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stop_recorded_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playback_waveform_view" />

    <ImageButton
        android:id="@+id/stop_recorded_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/stop_recorded_button"
        android:src="@drawable/icons_music_stop"
        android:tint="@color/default_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/simple_zoom_control"
        app:layout_constraintStart_toEndOf="@+id/start_recorded_button"
        app:layout_constraintTop_toBottomOf="@+id/playback_waveform_view" />

    <ImageButton
        android:id="@+id/next_button_recorded"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/next_button_recorded"
        android:src="@drawable/icons_next_page"
        android:tint="@color/default_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/simple_zoom_control"
        app:layout_constraintTop_toBottomOf="@+id/playback_waveform_view" />

    <ZoomControls
        android:id="@+id/simple_zoom_control"
        android:layout_width="163dp"
        android:layout_height="57dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/next_button_recorded"
        app:layout_constraintStart_toEndOf="@+id/stop_recorded_button"
        app:layout_constraintTop_toBottomOf="@+id/playback_waveform_view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/patient_first_name_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="34dp"
        android:text="@string/patient_first_name_show"
        app:layout_constraintBottom_toTopOf="@+id/start_recorded_button"
        app:layout_constraintEnd_toStartOf="@+id/patient_last_name_show"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playback_waveform_view" />

    <TextView
        android:id="@+id/patient_last_name_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="35dp"
        android:text="@string/patient_last_name_show"
        app:layout_constraintBottom_toTopOf="@+id/stop_recorded_button"
        app:layout_constraintEnd_toStartOf="@+id/record_date_show"
        app:layout_constraintStart_toEndOf="@+id/patient_first_name_show"
        app:layout_constraintTop_toBottomOf="@+id/playback_waveform_view" />

    <TextView
        android:id="@+id/record_date_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="110dp"
        android:text="@string/record_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/patient_last_name_show"
        app:layout_constraintTop_toBottomOf="@+id/playback_waveform_view" />

</android.support.constraint.ConstraintLayout>