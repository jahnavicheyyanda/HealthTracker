<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".UI.RecordWave">

    <com.example.zece.healthtracker.Waveform.WaveformView
        android:id="@+id/playbackWaveformView"
        android:layout_width="357dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="145dp"
        android:layout_weight="1"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mode="PLAYBACK"
        app:waveformColor="#D3D3D3"
        app:waveformFillColor="#A9A9A9"
        app:waveformStrokeThickness="3" />


    <ImageButton
        android:id="@+id/start_record_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/start_record_button"
        android:src="@drawable/icons_start"
        android:tint="@color/default_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stop_record_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playbackWaveformView" />

    <ImageButton
        android:id="@+id/stop_record_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/stop_record_button"
        android:src="@drawable/icons_music_stop"
        android:tint="@color/default_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/zoom_img"
        app:layout_constraintStart_toEndOf="@+id/start_record_button"
        app:layout_constraintTop_toBottomOf="@+id/playbackWaveformView" />

    <ImageButton
        android:id="@+id/next_button_record2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/next_button_record2"
        android:src="@drawable/icons_next_page"
        android:tint="@color/default_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/zoom_img"
        app:layout_constraintTop_toBottomOf="@+id/playbackWaveformView" />

    <ImageButton
        android:id="@+id/zoom_img"
        android:layout_width="68dp"
        android:layout_height="61dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="51dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/zoom_img"
        android:foregroundTint="#00090101"
        android:tint="@color/default_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/next_button_record2"
        app:layout_constraintHorizontal_bias="0.936"
        app:layout_constraintStart_toEndOf="@+id/stop_record_button"
        app:layout_constraintTop_toBottomOf="@+id/playbackWaveformView"
        app:layout_constraintVertical_bias="0.8"
        app:srcCompat="@android:drawable/ic_menu_zoom" />

</android.support.constraint.ConstraintLayout>