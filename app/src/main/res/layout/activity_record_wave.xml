<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".UI.RecordWave">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="424dp"
        android:layout_height="553dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="487dp">

        </HorizontalScrollView>

        <com.example.zece.healthtracker.Waveform.WaveformView
            android:id="@+id/playback_waveform_view"
            android:layout_width="wrap_content"
            android:layout_height="419dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="145dp"
            android:layout_weight="1"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="@+id/horizontal_scroll_view"
            app:layout_constraintEnd_toEndOf="@+id/horizontal_scroll_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:mode="PLAYBACK"
            app:waveformColor="#D3D3D3"
            app:waveformFillColor="#A9A9A9"
            app:waveformStrokeThickness="3" />

    </FrameLayout>


    <ImageButton
        android:id="@+id/start_record_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="68dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/start_record_button"
        android:src="@drawable/icons_start"
        android:tint="@color/default_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <ImageButton
        android:id="@+id/stop_record_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="68dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/stop_record_button"
        android:src="@drawable/icons_music_stop"
        android:tint="@color/default_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/simple_zoom_control"
        app:layout_constraintStart_toEndOf="@+id/start_record_button"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <ImageButton
        android:id="@+id/next_button_record2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="68dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/next_button_record2"
        android:src="@drawable/icons_next_page"
        android:tint="@color/default_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <ZoomControls
        android:id="@+id/simple_zoom_control"
        android:layout_width="163dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/next_button_record2"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

</android.support.constraint.ConstraintLayout>